<li id="comment-<%= comment.id %>"> 
    <%= comment.content %> by : 
    <em><%= comment.user.name %></em>
    <% if(locals.user && (locals.user.id == comment.user.id)) {%>
        <a class = "delete-comment-button" href="/comments/destroy/<%= comment.id %>">  <button type="button" class="btn btn-outline-danger"><em>Remove</em></button> </a>
    <% } %>
</li>